<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%p %d{HH:mm:ss.SSS} \(%c{0}\) %m%n</pattern>
        </encoder>
    </appender>

  <logger name="org.fcrepo.camel.serialization" additivity="false" level="${fcrepo.log.camel.serialization:-INFO}">
    <appender-ref ref="STDOUT"/>
  </logger>
  <logger name="org.apache.camel.impl.converter" additivity="false" level="ERROR">
    <appender-ref ref="STDOUT"/>
  </logger>
  <logger name="org.apache.camel" additivity="false" level="${fcrepo.log.camel:-WARN}">
    <appender-ref ref="STDOUT"/>
  </logger>
  <root additivity="false" level="WARN">
    <appender-ref ref="STDOUT"/>
  </root>
</configuration>
